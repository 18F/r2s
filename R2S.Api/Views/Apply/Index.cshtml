@using R2S.Api.Models

@{
    ViewBag.Title = "Apply Billets";
}

<div style="width:600px; margin-left:auto; margin-right:auto">
    <div style="background-color: lightgray">
        <h2>Apply Billets</h2>
    </div>
    <p>Space for search criteria selections</p>
    <input id="btnAjax" name="btnAjax" type="button" value="Get Matching Billets" />
    <div id="billets" style="background-color:lightskyblue"></div>
</div>

<script type="text/javascript" src="/scripts/jquery-2.1.4.min.js"></script> 

@section Scripts {

    <script>
    $('#btnAjax').click(function ajaxCall(){

        $.ajax({
            url: '/Apply/GetMatchingApplyBillets',
            contentType: 'application/html; charset=utf-8',
            type: 'GET',
            dataType: 'html'

        })
        .success(function (result) {
            $('#billets').html(result);
        })
        .error(function (xhr, status) {
            alert(status);
        })
    });

    
    </script>
}
